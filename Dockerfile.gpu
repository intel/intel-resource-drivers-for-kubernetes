FROM golang:1.22@sha256:a66eda637829ce891e9cf61ff1ee0edf544e1f6c5b0e666c7310dce231a66f28 as build
ARG LOCAL_LICENSES
WORKDIR /build
COPY . .

RUN make gpu && \
mkdir -p /install_root && \
if [ -z "$LOCAL_LICENSES" ]; then \
    make licenses; \
fi && \
cp -r licenses /install_root/ && \
cp bin/gpu-controller /install_root/ && \
cp bin/kubelet-gpu-plugin /install_root/ && \
cp bin/alert-webhook /install_root/

FROM scratch
WORKDIR /
LABEL description="Intel GPU resource driver for Kubernetes"

COPY --from=build /install_root /
